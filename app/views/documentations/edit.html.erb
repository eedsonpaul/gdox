<div id="controls_area" class="controls">
  <ul style="display:inline; ">
    <li> <h2 style="display: inline;"> CONTROLS </h2> </li>
    <li> <%= image_tag("controls/add.png", :border=>0) %></li>
    <li> <%= image_tag("controls/delete.png", :border=>0) %></li>
    <li> <%= image_tag("controls/user.png", :border=>0) %></li>
    <li> <a onclick="Effect.BlindDown('upload_panel'); return false;" href="#">
      <%= image_tag("controls/up.png", :border=>0) %></a>
    </li>
  </ul>
  <button class="rounded"> <span> Save Changes </span> </button>
</div>

<div id="screenie_area" class="main_content">
  <div id="about_dox">
	  <% @creator = User.find(@documentation.user_id) %>
	  
	  <div id="title" class="about_dox"><h1><%= in_place_text_field :documentation, 'title' %></h1></div>
	  <div id="author" class="about_dox"><i> &nbsp; by <%=h @creator.name %></i></div> 
	  <div id="info" class="about_dox"> <i><%= in_place_text_area :documentation, 'description' %></i> </div> 
  </div>

  <div id="upload_panel" style="display:none;" class="screenshot">
  	<%= render :partial => 'screenshot', :collection => @documentation.screenshots %>
	</div>

	<% for screenshot in @documentation.screenshots %>
		<%= image_tag screenshot.data.url(:original), :alt => "", :width => "800" %> <br />
	<% end %>

</div>

<div id="lessons_area" class="main_content">

		<%= link_to 'Back', :controller => 'documentations', :action => "#{@documentation.id}" %>

</div>


